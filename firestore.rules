rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection access
    match /Users/{userId} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/Users/$(request.auth.uid)).data.role == 'manager');
    }

    // LearningProgress subcollection under Users
    match /Users/{userId}/LearningProgress/{document=**} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/Users/$(request.auth.uid)).data.role == 'manager');
    }

    // Flashcards collection access
    match /Flashcards/{document=**} {
      // Allow both read and write access for authenticated users
      allow read, write: if request.auth != null;
    }
  }
}
